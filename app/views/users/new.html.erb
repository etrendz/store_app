<style>
.white {
  font-family: 'Asia Bold';    
  url('/assets/Asia Bold.ttf') format('truetype'),
  font-weight: bold;
  font-size: 150%;
  font-style: normal;
}
</style>
		<div class="main-container">
			<div class="main-content">
				<div class="row">
					<div class="col-sm-10 col-sm-offset-1">
						<div class="login-container">
							<div class="center">
								<h1>
									<i class="icon-leaf green"></i>
									<span class="white">MEN'S FASHION</span>
								</h1>
								<h4 class="blue">&copy; ETrendz IT Solutions</h4>
							</div>

							<div class="space-6"></div>

							<div class="position-relative">
								<div id="signup-box" class="signup-box visible widget-box no-border">
									<div class="widget-body">
										<div class="widget-main">
											<h4 class="header green lighter bigger">
												<i class="icon-group blue"></i>
												New User Registration
											</h4>

											<div class="space-6"></div>
											<p> Enter your details to begin: </p>

											
											<%= form_for @user, html: {class: "form", onsubmit: "return validateForm()"} do |f| %>
												<% if @user.errors.any? %>
												  <div class="alert alert-error">
													<h2>Form is invalid</h2>
													<ul>
													  <% @user.errors.full_messages.each do |message| %>
														<li><%= message %></li>
													  <% end %>
													</ul>
												  </div>
												<% end %>
												<fieldset>
													<label class="block clearfix">
														<span class="block input-icon input-icon-right">
															<!--<input type="text"  class="form-control" placeholder="Username" /> -->
															<%= f.text_field :name, class: "form-control", placeholder: "Username" %>
															<i class="icon-user"></i>
														</span>
													</label>

													<label class="block clearfix">
														<span class="block input-icon input-icon-right">
															<%= f.text_field :email, class: "form-control", placeholder: "Email" %>
															<i class="icon-envelope"></i>
														</span>
													</label>

													<label class="block clearfix">
														<span class="block input-icon input-icon-right">
															<%= f.password_field :password, class: "form-control", placeholder: "Password" %>
															<i class="icon-lock"></i>
														</span>
													</label>

													<label class="block clearfix">
														<span class="block input-icon input-icon-right">
															<%= f.password_field :password_confirmation, class: "form-control", placeholder: "Repeat password" %>
															<i class="icon-retweet"></i>
														</span>
													</label>

													<label class="block">
														<input type="checkbox" name="agreement" class="ace" />
														<span class="lbl">
															I accept the
															<a href="#">User Agreement</a>
														</span>
													</label>

													<div class="space-24"></div>

													<div class="clearfix">
														<button type="reset" class="width-30 pull-left btn btn-sm">
															<i class="icon-refresh"></i>
															Reset
														</button>
														<%= f.submit t("user.sign_up", default: "Register"), class: "width-65 pull-right btn btn-sm btn-success"  %>
													</div>
												</fieldset>
											<% end %>
										</div>

										<div class="toolbar center">
											<a href="<%=login_path %>" onclick="show_box('login-box'); return false;" class="back-to-login-link">
												<i class="icon-arrow-left"></i>
												Back to login
											</a>
										</div>
									</div><!-- /widget-body -->
								</div><!-- /signup-box -->
							</div><!-- /position-relative -->
						</div>
					</div><!-- /.col -->
				</div><!-- /.row -->
			</div>
		</div><!-- /.main-container -->

		<script src="../../../../ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>


		<script type="text/javascript">
			window.jQuery || document.write("<script src='assets/js/jquery-2.0.3.min.js'>"+"<"+"/script>");
		</script>

		<script type="text/javascript">
			if("ontouchend" in document) document.write("<script src='assets/js/jquery.mobile.custom.min.js'>"+"<"+"/script>");
		</script>

		<!-- inline scripts related to this page -->

		<script type="text/javascript">
			function show_box(id) {
			 jQuery('.widget-box.visible').removeClass('visible');
			 jQuery('#'+id).addClass('visible');
			}
			function validateForm() {
				var xee = document.forms[0]["agreement"].checked;
				if (xee == false) {
					alert("Accept the User Agreement");
					return false;
				}
			}
		</script>