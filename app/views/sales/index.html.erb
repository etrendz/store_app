
<table id="sample-table-1" class="table table-striped table-bordered table-hover">
  <tr>
    <th>Date</th>
    <th>Bill No</th>
	<th>Customer</th>
    <th>Remark</th>
    <th>Paid</th>
    <th>Action</th>
  </tr>

<% @sales.each do |sale| %>
  <tr>
    <td><%= sale.sale_date.strftime('%d %b %Y') %></td>
    <td><%= sale.invoice %></td>
	<td><%= sale.customer %></td>
	<td><%= sale.remark %></td>
    <td><%= sale.paid ? "Yes" : "No" %></td>
    <td><%= link_to 'Show', sale %>  <%#= link_to 'Delete', sale, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
