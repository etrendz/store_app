

<form id="sales_return_register_form" class="form-search" action="/form_submitted">

				<%= hidden_field_tag "report_type", 'CBP' %>
		
		<div class="col-xs-3 col-sm-3">
			<label for="id-date-range-picker-1">Start Date</label>
			<div class="input-group">
				<span class="input-group-addon">
					<i class="icon-calendar bigger-110"></i>
				</span>
				<input id='from_date' class="form-control date-picker" id="from_date" type="text" data-date-format="dd-mm-yyyy" />
			</div>
		</div>
	
		<div class="col-xs-3 col-sm-3">
	<label for="id-date-range-picker-1">End Date</label>
			<div class="input-group">
				<input id='to_date' class="form-control date-picker" id="to_date" type="text" data-date-format="dd-mm-yyyy" />
				<span class="input-group-addon">
					<i class="icon-calendar bigger-110"></i>
				</span>
			</div>
		</div>
		
		<div class="col-xs-3 col-sm-3">
	<label for="id-date-range-picker-1">&nbsp;</label>
			<br/>
			<button id="sales_return_register_btn" class="btn btn-info btn-sm" type="button">
				<i class="icon-ok bigger-110"></i>
				Submit
			</button>
		</div>
		<input type="submit" style="display:none" />
</form>

<div class="sales_return_register" style="clear:both"></div>												
<script>
$( "#sales_return_register_btn" ).click(function() {
$( "#sales_return_register_form" ).submit();
});

$( "form" ).submit(function( event ) {
	$('.sales_return_register').html('<br/><br/><br/><img src="/assets/loader.gif"> loading...');
$.get('/sales_return_register?from='+$("#from_date" ).val()+'&to='+$("#to_date" ).val(), function(data){
$('.sales_return_register').html(data);
});
event.preventDefault();
});
</script>

