<h1>Listing suppliers</h1>

<table class="table table-striped table-bordered table-hover">
  <tr>
    <th>Name</th>
    <th>Mobile</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @suppliers.each do |supplier| %>
  <tr>
    <td><%= supplier.name %></td>
    <td><%= supplier.mobile %></td>
    <td><div class="visible-md visible-lg hidden-sm hidden-xs action-buttons"><%= link_to '<i class="icon-zoom-in"></i> Show '.html_safe, supplier, class: "blue" %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <%= link_to '<i class="icon-pencil"></i> Edit '.html_safe, edit_supplier_path(supplier), class: "green" %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
	<%= link_to '<i class="icon-trash"></i> Delete '.html_safe, supplier, method: :delete, data: { confirm: 'Are you sure?' }, class: "red" %></div></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Supplier', new_supplier_path %>
