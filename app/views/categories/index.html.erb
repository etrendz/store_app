<h1>Listing categories</h1>

<div  class="table-responsive">
<%= link_to 'Add Category', new_category_path, class: 'btn btn-sm btn-pink' %>
<table class="table table-striped table-bordered table-hover">
  <tr>
    <th>Name</th>
    <th>Total Products</th>
    <th>Action</th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= category.name %></td>
    <td><%= category.products.length %></td>
    <td><div class="visible-md visible-lg hidden-sm hidden-xs action-buttons"><%= link_to '<i class="icon-zoom-in"></i> Show '.html_safe, category, class: "blue" %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <%= link_to '<i class="icon-pencil"></i> Edit '.html_safe, edit_category_path(category), class: "green" %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
	<%= link_to '<i class="icon-trash"></i> Delete '.html_safe, category, method: :delete, data: { confirm: 'Are you sure?' }, class: "red" %></div></td>
  </tr>
<% end %>
</table>

<br />

