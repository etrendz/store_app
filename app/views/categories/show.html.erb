<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @category.name %>
</p>


<table class="table table-striped table-bordered table-hover">
  <tr>
    <th>Name</th>
    <th>Code</th>
    <th><%=  "Qty" %></th>
    <th><%=  "Price" %></th>
	<th>Action</th>
  </tr>

<%  @category.products.each do |product| %>
  <tr>
    <td><%= link_to "#{product.name}", product %></td>
    <td><%= product.code %></td>
	<% if product.stock_products.length < 10  %>
		<td><%= product.stock_products.length %><span style='color:#ff0000;font-weight:bold'>  Low Stock!</span></td>
	<% else %>
		<td><%= product.stock_products.length %></td>
	<% end%>
		<td><%= product.stock_products.last.price if product.stock_products.last %></td>
	<td><div class="visible-md visible-lg hidden-sm hidden-xs action-buttons"><%= link_to '<i class="icon-zoom-in"></i> Show '.html_safe, product, class: "blue" %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <%= link_to '<i class="icon-pencil"></i> Edit '.html_safe, edit_product_path(product), class: "green", :method => :delete %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
	<%= link_to '<i class="icon-trash"></i> Delete '.html_safe, product, method: :delete, data: { confirm: 'Are you sure?' }, class: "red" %></div></td>
	
  </tr>
<% end %>
</table>