<!DOCTYPE html>
<html lang="en">
<head>
	<title>Store Manager</title>
	<%= stylesheet_link_tag  "application" %>
	
	<!--	<link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Open+Sans:400,300" />   -->
	
	<%= javascript_include_tag 'application' %>	
	
<%= csrf_meta_tag %>
	
	<script>
		(function($){
			$(window).load(function(){
				$("#content_1").mCustomScrollbar({
					scrollButtons:{
						enable:true
					}
				});
			});
		})(jQuery);
	</script>
	</head>

	<body>
		<div class="navbar navbar-default" id="navbar">

			<div class="navbar-container" id="navbar-container">
				<div class="navbar-header pull-left">
					<a href="#" class="navbar-brand">
						<small>
							<i class="icon-leaf"></i>
							ETrendz Store
						</small>
					</a><!-- /.brand -->
				</div><!-- /.navbar-header -->

				<div class="navbar-header pull-right" role="navigation">
					<ul class="nav ace-nav">


						<li class="light-blue">
							<a data-toggle="dropdown" href="#" class="dropdown-toggle">
								<img class="nav-user-photo" src="/assets/avatars/user.png" alt="Users's Photo" />
								<span class="user-info">
									<small>Welcome,</small>
									<% @user = current_user if !current_user.nil? %><%= @user.name if current_user%>
								</span>

								<i class="icon-caret-down"></i>
							</a>

							<ul class="user-menu pull-right dropdown-menu dropdown-yellow dropdown-caret dropdown-close">
								<li>
									<a href="#">
										<i class="icon-cog"></i>
										Settings
									</a>
								</li>

								<li>
									<a href="#">
										<i class="icon-user"></i>
										Profile
									</a>
								</li>

								<li class="divider"></li>

								<li>
									<a href="/logout">
										<i class="icon-off"></i>
										Logout
									</a>
								</li>
							</ul>
						</li>
					</ul><!-- /.ace-nav -->
				</div><!-- /.navbar-header -->
			</div><!-- /.container -->
		</div>

		<div class="main-container" id="main-container">
			<script type="text/javascript">
				try{ace.settings.check('main-container' , 'fixed')}catch(e){}
			</script>

			<div class="main-container-inner">
				<a class="menu-toggler" id="menu-toggler" href="#">
					<span class="menu-text"></span>
				</a>

				<div class="sidebar" id="sidebar">
					<script type="text/javascript">
						try{ace.settings.check('sidebar' , 'fixed')}catch(e){}
					</script>

					<div class="sidebar-shortcuts" id="sidebar-shortcuts">
						<div class="sidebar-shortcuts-large" id="sidebar-shortcuts-large">
							<button class="btn btn-success">
								<i class="icon-signal"></i>
							</button>

							<button class="btn btn-info">
								<i class="icon-pencil"></i>
							</button>

							<button class="btn btn-warning">
								<i class="icon-group"></i>
							</button>

							<button class="btn btn-danger">
								<i class="icon-cogs"></i>
							</button>
						</div>

						<div class="sidebar-shortcuts-mini" id="sidebar-shortcuts-mini">
							<span class="btn btn-success"></span>

							<span class="btn btn-info"></span>

							<span class="btn btn-warning"></span>

							<span class="btn btn-danger"></span>
						</div>
					</div><!-- #sidebar-shortcuts -->

					<ul class="nav nav-list">
						<li class="active">
							<a href="/">
								<i class="icon-dashboard"></i>
								<span class="menu-text"> Dashboard </span>
							</a>
						</li>

						<li>
							<a href="/products" class="dropdown-toggle">
								<i class="icon-desktop"></i>
								<span class="menu-text"> Master Entry </span>

								<b class="arrow icon-angle-down"></b>
							</a>

							<ul class="submenu">
								<li>
									<a href="/categories" class="dropdown-toggle">
										<i class="icon-double-angle-right"></i>

										Categories
										<b class="arrow icon-angle-down"></b>
									</a>

									<ul class="submenu">
										<li>
											<a href="/categories">
												<i class="icon-leaf"></i>
												View Categories
											</a>
										</li>

										<li>
											<a href="/categories/new">
												<i class="icon-pencil"></i>

												New Category
											</a>
										</li>
									</ul>
								</li>
								<li>
									<a href="/products" class="dropdown-toggle">
										<i class="icon-double-angle-right"></i>

										Products
										<b class="arrow icon-angle-down"></b>
									</a>

									<ul class="submenu">
										<li>
											<a href="/products">
												<i class="icon-leaf"></i>
												View Products
											</a>
										</li>

										<li>
											<a href="/products/new">
												<i class="icon-pencil"></i>

												New Product
											</a>
										</li>
									</ul>
								</li>
								<li>
									<a href="/suppliers" class="dropdown-toggle">
										<i class="icon-double-angle-right"></i>

										Suppliers
										<b class="arrow icon-angle-down"></b>
									</a>

									<ul class="submenu">
										<li>
											<a href="/suppliers">
												<i class="icon-leaf"></i>
												View Suppliers
											</a>
										</li>

										<li>
											<a href="/suppliers/new">
												<i class="icon-pencil"></i>

												New Suppliers
											</a>
										</li>
									</ul>
								</li>
								<li>
									<a href="/customers" class="dropdown-toggle">
										<i class="icon-double-angle-right"></i>

										Customers
										<b class="arrow icon-angle-down"></b>
									</a>

									<ul class="submenu">
										<li>
											<a href="/customers">
												<i class="icon-leaf"></i>
												View Customers
											</a>
										</li>

										<li>
											<a href="/customers/new">
												<i class="icon-pencil"></i>

												New Customers
											</a>
										</li>
									</ul>
								</li>
							</ul>
						</li>
						<li>
							<a href="/purchases/new" class="dropdown-toggle">
								<i class="icon-text-width"></i>
								<span class="menu-text"> Purchases </span>
								<b class="arrow icon-angle-down"></b>
							</a>
							
							<ul class="submenu">
								<li>
									<a href="/purchases">
										<i class="icon-double-angle-right"></i>
										View Purchases
									</a>
								</li>

								<li>
									<a href="/purchases/new">
										<i class="icon-double-angle-right"></i>
										New Purchase
									</a>
								</li>
							</ul>
						</li>

						<li>
							<a href="/sales/new" class="dropdown-toggle">
								<i class="icon-text-width"></i>
								<span class="menu-text"> Sales </span>
								<b class="arrow icon-angle-down"></b>
							</a>
							
							<ul class="submenu">
								<li>
									<a href="/sales">
										<i class="icon-double-angle-right"></i>
										View Sales
									</a>
								</li>

								<li>
									<a href="/sales/new">
										<i class="icon-double-angle-right"></i>
										New Sale
									</a>
								</li>
							</ul>
						</li>

						<li>
							<a href="/purchases/report" class="dropdown-toggle">
								<i class="icon-list"></i>
								<span class="menu-text"> Report </span>

								<b class="arrow icon-angle-down"></b>
							</a>

							<ul class="submenu">
								<li>
									<a href="/purchases/report">
										<i class="icon-double-angle-right"></i>
										Purchase Report
									</a>
								</li>

								<li>
									<a href="/purchases/supplier_report">
										<i class="icon-double-angle-right"></i>
										Supplier Wise Report
									</a>
								</li>

								<li>
									<a href="/sales/report">
										<i class="icon-double-angle-right"></i>
										Sales Report
									</a>
								</li>
								
								<li>
									<a href="/select_month_range">
										<i class="icon-double-angle-right"></i>
										Stock Report
									</a>
								</li>
							</ul>
						</li>

						<li>
							<a href="#" class="dropdown-toggle">
								<i class="icon-edit"></i>
								<span class="menu-text"> Credit </span>

								<b class="arrow icon-angle-down"></b>
							</a>

							<ul class="submenu">
								<li>
									<a href="/sales/receivables">
										<i class="icon-double-angle-right"></i>
										Receivables
									</a>
								</li>

								<li>
									<a href="/purchases/payables">
										<i class="icon-double-angle-right"></i>
										Payables
									</a>
								</li>
							</ul>

						</li>

						<li>
							<a href="#" class="dropdown-toggle">
								<i class="icon-edit"></i>
								<span class="menu-text"> Admin </span>

								<b class="arrow icon-angle-down"></b>
							</a>

							<ul class="submenu">
								<li>
									<a href="/backup">
										<i class="icon-double-angle-right"></i>
										Backup
									</a>
								</li>

								<li>
									<a href="/barcode/barcode">
										<i class="icon-double-angle-right"></i>
										Barcode
									</a>
								</li>
								
								<li>
									<a href="/barcode/barcode_single">
										<i class="icon-double-angle-right"></i>
										Single Barcode
									</a>
								</li>
							</ul>

						</li>

					</ul><!-- /.nav-list -->

					<div class="sidebar-collapse" id="sidebar-collapse">
						<i class="icon-double-angle-left" data-icon1="icon-double-angle-left" data-icon2="icon-double-angle-right"></i>
					</div>

					<script type="text/javascript">
						try{ace.settings.check('sidebar' , 'collapsed')}catch(e){}
					</script>
				</div>

				<div class="main-content">
					<div class="breadcrumbs" id="breadcrumbs">
						<script type="text/javascript">
							try{ace.settings.check('breadcrumbs' , 'fixed')}catch(e){}
						</script>

						<ul class="breadcrumb">
							<li>
								<i class="icon-home home-icon"></i>
								<a href="#">Home</a>
							</li>
							<li class="active"><%= params[:action] %></li>
						</ul><!-- .breadcrumb -->

						<div class="nav-search" id="nav-search">
							<form class="form-search">
								<span class="input-icon">
									<input type="text" placeholder="Search ..." class="nav-search-input" id="nav-search-input" autocomplete="off" />
									<i class="icon-search nav-search-icon"></i>
								</span>
							</form>
						</div><!-- #nav-search -->
					</div>

					<div class="page-content">
						<div class="row">
							<div class="col-xs-12">
								<!-- PAGE CONTENT BEGINS -->
								<% flash.each do |key, value| %>
									<div class="<%= flash_class(key) %>">
											<button type=button" class="close" data-dismiss="alert">
												<i class="icon-remove"></i>
											</button>
										  <%= value %>
									</div>
								<% end %>
								
									<%= yield %>
								<!-- PAGE CONTENT ENDS -->
							</div><!-- /.col -->
						</div><!-- /.row -->
					</div><!-- /.page-content -->
				</div><!-- /.main-content -->

			</div><!-- /.main-container-inner -->

			<a href="#" id="btn-scroll-up" class="btn-scroll-up btn btn-sm btn-inverse">
				<i class="icon-double-angle-up icon-only bigger-110"></i>
			</a>
		</div><!-- /.main-container -->
	</body>
</html>
