<h1>Listing customers</h1>

<table class="table table-striped table-bordered table-hover">
  <tr>
    <th>Name</th>
    <th>Mobile</th>
    <th>Action</th>
  </tr>

<% @customers.each do |customer| %>
  <tr>
    <td><%= customer.name %></td>
    <td><%= customer.mobile %></td>
    <td><div class="visible-md visible-lg hidden-sm hidden-xs action-buttons"><%= link_to '<i class="icon-zoom-in"></i> Show '.html_safe, customer, class: "blue" %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <%= link_to '<i class="icon-pencil"></i> Edit '.html_safe, edit_customer_path(customer), class: "green" %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
	<%= link_to '<i class="icon-trash"></i> Delete '.html_safe, customer, method: :delete, data: { confirm: 'Are you sure?' }, class: "red" %></div></td>
  </tr>
<% end %>
</table>
