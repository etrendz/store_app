
<div  class="table-responsive">
<table class="table table-striped table-bordered table-hover">
  <tr>
    <th>Name</th>
    <th>Code</th>
    <th>Size</th>
    <th>Qty</th>
    <th>Price</th>
    <th>Select</th>
  </tr>

<form class="form-search" action='/barby_barcode_generate'>
<% @products.each do |product| %>
	<input type='hidden' name='<%="barcode_#{product.id}" %>' value='<%= product.code%>' />
	
  <tr>
    <td><%= link_to "#{product.name}", product %></td>
    <td><%= product.code %></td>
    <td><%= product.size %></td>
	<td><input type='text' name='<%="barcode_qty_#{product.id}" %>' value='<%= product.qty %>' /></td>
    <td><%= product.price %></td>
	<td><input type='checkbox' name='<%="barcode_check_#{product.id}" %>' /></td>
	
  </tr>
<% end %>
	<div>
		<span>Start Printing from Cell : </span>
		<input type='text' name='start_from' value='1' />
		<input type='submit' name='submit' value='Submit' class='btn btn-success pull-right'/>
	</div>
</form>
</table>
</div>