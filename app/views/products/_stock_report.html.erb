<h2>Stock Report (<%= @from %> - <%= @to %>)</h2></br>
<div  class="table-responsive">
<table class="table table-striped table-bordered table-hover">
  <tr>
    <th>S.No</th>
    <th>Stock Name</th>
    <th>Opening Stock</th>
    <th>Purchase</th>
    <th>Sales</th>
    <th>Closing Stock</th>
    <th>Closing Value</th>
  </tr>
<% i = 0
	total_opening_price = 0
	total_purchase_price = 0
	total_sale_price = 0
	total_closing_value = 0 
%>
<% @products.each do |product| 
	i +=1
%>
  <tr>
    <td><%= i %></td>
    <td><%= product.name %></td>
    <td><%= @opening_stock[product.id]["qty"] %> (<%= @opening_stock[product.id]["price"] %>)</td>
    <td><%= @purchase_stock[product.id]["qty"] %> (<%= (@purchase_stock[product.id]["price"]).round(2)%>)</td>
    <td><%= @sale_stock[product.id]["qty"] %> (<%= (@sale_stock[product.id]["price"]).round(2) %>)</td>
	<% total_opening_price += @opening_stock[product.id]["price"] %>
	<% total_purchase_price += @purchase_stock[product.id]["price"] %>
	<% total_sale_price += @sale_stock[product.id]["price"] %>
	<% closing_stock = @opening_stock[product.id]["qty"] + @purchase_stock[product.id]["qty"] - @sale_stock[product.id]["qty"] %>
		<%# closing_value = (product.stock_products && product.stock_products.last) ? (closing_stock * product.stock_products.last.cprice) : 0  %>
		<% closing_value = @opening_stock[product.id]["price"] + @purchase_stock[product.id]["price"] - @sale_stock[product.id]["cprice"] %>

	<% total_closing_value += closing_value %>
    <td><%= closing_stock %></td>
    <td><%= closing_value.round(2) %></td>
  </tr>
<% end %>

  <tr>
    <td>Total : </td>
    <td></td>
    <td><%= total_opening_price.round(2) %></td>
    <td><%= total_purchase_price.round(2) %> </td>
    <td><%= total_sale_price %></td>

    <td></td>
    <td><%= total_closing_value.round(2) %></td>
  </tr>
</table>


	<h4 style='position:fixed;top:107px;right:50px;font-weight:bold;background:#438EB9;padding:5px 10px;color:#fff;border:5px solid #6fb3e0 ;'>Profit : Rs. <%= (total_sale_price + total_closing_value - (total_opening_price + total_purchase_price)).round(2) %> </h4>
	
	
</div>
